# backend/.env.example
# Copy this file to .env and fill in your values

# Database - PostgreSQL connection URL (REQUIRED)
DATABASE_URL="postgresql://user:password@host:port/database"

# API Authentication (REQUIRED)
API_SECRET="your-secure-api-key-here"

# Optional - Timery/Toggl integration
TOGGL_API_TOKEN="your-api-token-here"

# Server Configuration (optional, has defaults)
PORT=3001
NODE_ENV="development"

# CORS Configuration (optional, has default)
FRONTEND_URL="http://localhost:3000"

# Additional allowed origins (comma-separated)
# Example: "https://compass.example.com,https://compass-staging.example.com"
FRONTEND_URLS=""

# Allow any https://*.vercel.app origin (useful for preview deployments)
# Recommended: enable only on a staging backend used by previews.
CORS_ALLOW_VERCEL_PREVIEWS="false"
